@model WebApplication2.Models.NhanVien

<h1>Login</h1>

@if (ViewData["ErrorMessage"] != null)
{
    <p style="color: red;">@ViewData["ErrorMessage"]</p>
}

<form method="post" asp-action="Login">
    <div>
        <label asp-for="TenDangNhap">Username:</label>
        <input asp-for="TenDangNhap" />
    </div>

    <div>
        <label asp-for="MatKhau">Password:</label>
        <input asp-for="MatKhau" type="password" />
    </div>

    <div>
        <button type="submit">Login</button>
    </div>
</form>
