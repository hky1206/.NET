@model IEnumerable<WebApplication2.Models.DonViTinh>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<div class="card shadow mb-4">
    <div class="card-header py-3">
        <h6 class="m-0 font-weight-bold text-primary">THÔNG TIN CHI TIẾT</h6>
    </div>
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.TenDvt)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.TenDvt)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.IdDvt">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.IdDvt">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.IdDvt">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
</div>
        </div>
    </div>
@section Scripts {
    <!-- Các đoạn mã script cụ thể cho trang Index -->
    <script src="~/js/index-script.js"></script>
}