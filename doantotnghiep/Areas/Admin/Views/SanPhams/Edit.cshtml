@model WebApplication2.Models.SanPham

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<h4>Sửa thông tin sản phẩm</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="MaSp" />
            <div class="form-group">
                <label asp-for="TenSp" class="control-label">Tên sản phẩm</label>
                <input asp-for="TenSp" class="form-control" />
                <span asp-validation-for="TenSp" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="IdDvt" class="control-label">Đơn vị tính</label>
                <select asp-for="IdDvt" class="form-control" asp-items="ViewBag.IdDvt"></select>
                <span asp-validation-for="IdDvt" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="IdDanhmuc" class="control-label">Danh mục</label>
                <select asp-for="IdDanhmuc" class="form-control" asp-items="ViewBag.IdDanhmuc"></select>
                <span asp-validation-for="IdDanhmuc" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="IdHangsx" class="control-label">Hãng sản xuất</label>
                <select asp-for="IdHangsx" class="form-control" asp-items="ViewBag.IdHangsx"></select>
                <span asp-validation-for="IdHangsx" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="IdPhienban" class="control-label">Phiên bản</label>
                <select asp-for="IdPhienban" class="form-control" asp-items="ViewBag.IdPhienban"></select>
                <span asp-validation-for="IdPhienban" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="IdThoigianbaohanh" class="control-label">Bảo hành</label>
                <select asp-for="IdThoigianbaohanh" class="form-control" asp-items="ViewBag.IdThoigianbaohanh"></select>
                <span asp-validation-for="IdThoigianbaohanh" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Gia" class="control-label">Giá niêm yết</label>
                <input asp-for="Gia" class="form-control" />
                <span asp-validation-for="Gia" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Lưu thay đổi" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Quay lại</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
