@model WebApplication2.Models.PhieuNhap

@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Thông tin phiếu xuất</h1>

<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Mã phiếu:
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.MaPN)
        </dd>
            <dt class="col-sm-2">
                Ngày nhập:
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.NgayNhap)
            </dd>
            
                <dt class="col-sm-2">
                    Số Phiếu Nhập :
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.SoPhieuNhap)
                </dd>
                
                    <dt class="col-sm-2">
                        Nhà cung cấp :
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.MaNccNavigation.TenNcc)
                    </dd>
                    
                        <dt class="col-sm-2">
                            Số Phiếu Xuất :
                        </dt>
                        <dd class="col-sm-10">
                            @Html.DisplayFor(model => model.IdNguoidungNavigation.Hoten)
                        </dd>
        <dt class="col-sm-2">
            Tổng tiền:
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.TongTien)
        </dd>
    </dl>
    <h4>Chi Tiết Phiếu Nhập</h4>
    <table style="border-collapse: collapse; width: 50%; margin: 20px;">
        <thead>
            <tr>
                <th style="border: 1px solid #dddddd; background-color: #f2f2f2; text-align: left; padding: 8px;">Tên Sản Phẩm</th>
                <th style="border: 1px solid #dddddd; text-align: left; padding: 8px;">Số Lượng</th>
                <th style="border: 1px solid #dddddd; text-align: left; padding: 8px;">Đơn Giá</th>
                <th style="border: 1px solid #dddddd; text-align: left; padding: 8px;">Thành Tiền</th>
                <th style="border: 1px solid #dddddd; text-align: left; padding: 8px;">Thuế Nhập</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var chiTiet in ViewData["ChiTietPhieuNhap"] as List<ChiTietPhieuNhap>)
            {
                <tr>
                    <td style="border: 1px solid #dddddd; text-align: left; padding: 8px;">
                        @chiTiet.MaSpNavigation.TenSp
                    </td>
                    <td style="border: 1px solid #dddddd; text-align: left; padding: 8px;">@chiTiet.SoLuong</td>
                    <td style="border: 1px solid #dddddd; text-align: left; padding: 8px;">@chiTiet.DonGia</td>
                    <td style="border: 1px solid #dddddd; text-align: left; padding: 8px;">@chiTiet.ThanhTien</td>
                    <td style="border: 1px solid #dddddd; text-align: left; padding: 8px;">@chiTiet.ThueNhap</td>
                </tr>
            }
        </tbody>
    </table>

</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model?.IdPhieunhap">Edit</a> |
    <a asp-action="Index">Back to List</a>
</div>
