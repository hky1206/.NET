@model IEnumerable<WebApplication2.Models.NguoiDung>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Quản lý nhân viên</h1>

<p>
    <a asp-action="Create">Thêm nhân viên</a>
</p>
<div class="card shadow mb-4">
    <div class="card-header py-3">
        <h6 class="m-0 font-weight-bold text-primary">THÔNG TIN CHI TIẾT</h6>
    </div>
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
    <thead class="text-center">
        <tr>
            <th>
                Họ và tên
            </th>
            <th>
                Địa chỉ
            </th>
            <th>
                Số điện thoại
            </th>
            <th>
                Email
            </th>
            

            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Hoten)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DiaChi)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.SoDienThoai)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Email)
            </td>
           


            <td>
                <a asp-action="Edit" asp-route-id="@item.IdNguoidung">Sửa</a> |
                <a asp-action="Details" asp-route-id="@item.IdNguoidung">Chi tiết</a> |
                <a asp-action="Delete" asp-route-id="@item.IdNguoidung">Xoá</a>
            </td>
        </tr>
}
    </tbody>
</table>
</div>
        </div>
    </div>
@section Scripts {
    <!-- Các đoạn mã script cụ thể cho trang Index -->
    <script src="~/js/index-script.js"></script>
}
